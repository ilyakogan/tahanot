<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:_="http://schemas.android.com/apk/res/android"
    _:layout_width="match_parent"
    _:layout_height="match_parent"
    _:orientation="vertical"
    _:visibility="visible" >

    <View
        _:id="@+id/borderBottom"
        _:layout_width="match_parent"
        _:layout_height="2dp"
        _:layout_alignParentBottom="true"
        _:layout_marginBottom="2dp"
        _:layout_marginLeft="2dp"
        _:layout_marginRight="2dp"
        _:background="#000000" />

    <View
        _:id="@+id/borderTop"
        _:layout_width="match_parent"
        _:layout_height="2dp"
        _:layout_alignParentTop="true"
        _:layout_marginLeft="2dp"
        _:layout_marginRight="2dp"
        _:layout_marginTop="2dp"
        _:background="#000000" />

    <View
        _:id="@+id/borderLeft"
        _:layout_width="2dp"
        _:layout_height="match_parent"
        _:layout_above="@id/borderBottom"
        _:layout_alignParentLeft="true"
        _:layout_below="@id/borderTop"
        _:layout_marginLeft="2dp"
        _:background="#000000" />

    <View
        _:id="@+id/borderRight"
        _:layout_width="2dp"
        _:layout_height="match_parent"
        _:layout_above="@id/borderBottom"
        _:layout_alignParentRight="true"
        _:layout_below="@id/borderTop"
        _:layout_marginRight="2dp"
        _:background="#000000" />

    <View
        _:id="@+id/whiteBackground"
        _:layout_width="wrap_content"
        _:layout_height="79dp"
        _:layout_below="@id/borderTop"
        _:layout_toLeftOf="@id/borderRight"
        _:layout_toRightOf="@id/borderLeft"
        _:background="#ffffff" />

    <View
        _:id="@+id/borderBelowTitle"
        _:layout_width="match_parent"
        _:layout_height="1dp"
        _:layout_below="@+id/whiteBackground"
        _:layout_marginLeft="2dp"
        _:layout_marginRight="2dp"
        _:background="#000000" />

    <FrameLayout
        _:id="@+id/busIconBackground"
        _:layout_width="79dp"
        _:layout_height="79dp"
        _:layout_below="@+id/borderTop"
        _:layout_toRightOf="@+id/borderLeft"
        _:background="#0000ff" >

        <ImageView
            _:id="@+id/busIcon"
            _:layout_width="wrap_content"
            _:layout_height="wrap_content"
            _:layout_gravity="center"
            _:src="@drawable/bus_stop_sign_icon_75" />
    </FrameLayout>

    <TextView
        _:id="@+id/stopName"
        _:layout_width="wrap_content"
        _:layout_height="wrap_content"
        _:layout_below="@+id/borderTop"
        _:layout_marginLeft="6dp"
        _:layout_marginRight="6dp"
        _:layout_toLeftOf="@+id/borderRight"
        _:layout_toRightOf="@+id/busIconBackground"
        _:ellipsize="none"
        _:maxLines="3"
        _:padding="5dp"
        _:scrollHorizontally="false"
        _:textAppearance="?android:attr/textAppearanceLarge"
        _:textColor="#000000" />

    <TextView
        _:id="@+id/stopCode"
        _:layout_width="wrap_content"
        _:layout_height="wrap_content"
        _:layout_above="@+id/borderBelowTitle"
        _:layout_marginLeft="10dp"
        _:layout_toLeftOf="@+id/borderRight"
        _:layout_toRightOf="@+id/busIconBackground"
        _:paddingRight="5dp"
        _:textAppearance="?android:attr/textAppearanceMedium"
        _:textColor="#000000" />

    <LinearLayout
        _:layout_width="match_parent"
        _:layout_height="match_parent"
        _:layout_above="@+id/borderBottom"
        _:layout_below="@+id/borderBelowTitle"
        _:layout_toLeftOf="@+id/borderRight"
        _:layout_toRightOf="@+id/borderLeft"
        _:background="#ffc000"
        _:orientation="vertical" >

        <ListView
            _:id="@+id/routesListView"
            _:layout_width="wrap_content"
            _:layout_height="wrap_content"
            _:divider="@null"
            _:dividerHeight="0dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>